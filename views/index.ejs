<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
    <script>
        const handleLogout = () => {
            window.location.href = '/login'
        }
    </script>
</head>

<body>
    <div style="display: flex; justify-content: space-between;">
        <h1>URL Shorter Generator</h1>
        <button type="button" onclick="handleLogout()" style="height: 20px;">Logout</button>
    </div>
    <% if (locals.id) { %>
        <p>URL Generated: http://localhost:3001/url/<%= id %>
        </p>
        <% } %>
            <div>
                <form method="post" action="/url">
                    <label>Enter Your Orignal URL</label>
                    <input type="text" placeholder="Enter URL" name="url" />
                    <button type="submit">Generate</button>
                </form>
            </div>
            <div>
                <% if (locals.urls) { %>
                    <table>
                        <thead>
                            <th>Serial No</th>
                            <th>ShortId</th>
                            <th>Redirect</th>
                            <th>Clicks</th>
                        </thead>
                        <tbody>
                            <% urls.forEach((url, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= url.shortID %>
                                    </td>
                                    <td>
                                        <%= url.redirectURL %>
                                    </td>
                                    <td>
                                        <%= url.totalClicks.length %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } %>
            </div>
</body>

</html>